body {
	background: url(<%= image_path('bg.jpg') %>) center center no-repeat;
	background-attachment:fixed;
	background-position:center;
}

a {color:#fff;}
a:hover {color:#fff;}

#frame_page {position:relative;}
#frame_page div {position:fixed; z-index:9;}
	#frame_top {
		top:0;
		height:15px;
		width:100%;
		background: url(<%= image_path('frame/frame_top.png') %>) repeat-x top center;
	}
	#frame_right {
		right:0;
		height:100%;
		width:15px;
		background: url(<%= image_path('frame/frame_right.png') %>) repeat-y center right;
	}
	#frame_bottom {
		bottom:0;
		height:15px;
		width:100%;
		background: url(<%= image_path('frame/frame_bottom.png') %>) repeat-x bottom center;
	}
	
	#frame_left {
		left:0;
		height:100%;
		width:15px;
		background: url(<%= image_path('frame/frame_left.png') %>) repeat-y center left;
	}
	
	
	.container {
		padding:20px;
	}
	
		.content {
			background:#fff;
		}

		.main {
			background:#fff;
			margin-top:15%;
		}
	
			.main .col {
				background:#37353b;
				color:#fff;
			}
	
		.logotip {
			background:#cc4939 !important;
			font-family: 'Cuprum-Bold', sans-serif;
			text-transform: uppercase;
			color:#fff;
			position: relative;
		}
	
		.logotip:after, .logotip:before {
			top: 100%;
			border: solid transparent;
			z-index:6;
			content: " ";
			height: 0;
			width: 0;
			position: absolute;
			pointer-events: none;
		}

		.logotip:after {
			border-color: rgba(196, 147, 9, 0);
			border-top-color: #cc4939;
			border-width: 12px;
			left: 50%;
			margin-left: -12px;
		}
		.logotip:before {
			border-color: rgba(204, 73, 57, 0);
			border-top-color: #cc4939;
			border-width: 15px;
			left: 50%;
			margin-left: -15px;
		}