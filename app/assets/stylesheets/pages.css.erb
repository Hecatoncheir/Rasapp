body {
	background: url(<%= image_path('bg.jpg') %>) center center no-repeat;
	background-attachment:fixed;
	background-position:center;
}

@font-face {
	font-family: 'Agora';
	src: url(<%= font_path('agora/Agora.ttf') %>) format('truetype');
}

a {color:#fff;}
a:hover {color:#fff;}

#frame_page {position:relative;}
#frame_page div {position:fixed; z-index:9;}
	#frame_top {
		top:0;
		height:15px;
		width:100%;
		background: url(<%= image_path('frame/frame_top.png') %>) repeat-x top center;
	}
	#frame_right {
		right:0;
		height:100%;
		width:15px;
		background: url(<%= image_path('frame/frame_right.png') %>) repeat-y center right;
	}
	#frame_bottom {
		bottom:0;
		height:15px;
		width:100%;
		background: url(<%= image_path('frame/frame_bottom.png') %>) repeat-x bottom center;
	}
	
	#frame_left {
		left:0;
		height:100%;
		width:15px;
		background: url(<%= image_path('frame/frame_left.png') %>) repeat-y center left;
	}
	
.container {
	padding:20px;
}

	.main {
		background:#fff;
		margin-top:15%;
	}
	
		.main .col {
			background:#37353b;
			color:#fff;
		}
	
	.logotip {
		background:#cc4939 !important;
		font-family: 'Cuprum-Bold', sans-serif;
		text-transform: uppercase;
		color:#fff;
		position: relative;
	}
	
	.logotip:after, .logotip:before {
		top: 100%;
		border: solid transparent;
		z-index:6;
		content: " ";
		height: 0;
		width: 0;
		position: absolute;
		pointer-events: none;
	}

	.logotip:after {
		border-color: rgba(196, 147, 9, 0);
		border-top-color: #cc4939;
		border-width: 12px;
		left: 50%;
		margin-left: -12px;
	}
	.logotip:before {
		border-color: rgba(204, 73, 57, 0);
		border-top-color: #cc4939;
		border-width: 15px;
		left: 50%;
		margin-left: -15px;
	}
	
	.entry {
		font-family: 'Cuprum-Regular', sans-serif;
	}
	
		.entry h4 {
			background: url(<%= image_path('entry_arrows.png') %>)  no-repeat left;
			display:block;
			height:45px;
			padding:12px 0 0 0;
		}
		
	.navigation nav {
		padding:20px 0;
	}
		
		.navigation nav a {
			background:#656565;
			border: 2px solid #7f7f80;
			border-radius: 500px;
			text-align:center;
			padding:3px 6px;
			font-size:8px;
			vertical-align:middle;
			margin-right:6px;
		}
		
		.navigation nav .active {
			padding:6px 10px;
			font-size:16px;
			border-color:#fff;
		}
		
		.navigation nav a span {visibility:hidden;}
		
		.navigation nav .active span {visibility:visible;}
		
		.next {
			display:block;
			background: url(<%= image_path('navigation_next.png') %>)  no-repeat right;
			width:22px;
			height:32px;
			float:right;
			margin-right:-16px;
			margin-left:16px;
			margin-top:16px;
		}
			
	.about {
		margin-top:35px;
		margin-bottom:15px;
	}
	
		.about_me {
			margin-bottom:20px	;
			min-height:65px;
			background:#37353b url(<%= image_path('about_me_footer.png') %>) no-repeat left bottom;
			padding-bottom:60px;
			color:#fff;
			position:relative;
			font-family: 'Cuprum-Bold', sans-serif;
		}
	
		
			.me {font-family: 'Agora';}
			.me .name {
				text-transform:uppercase;
				color:#cc4939;
			}
			
			.read_blog{
				display:block;
				background: url(<%= image_path('read_blog.png') %>) no-repeat right center;
				width:167px;
				height:32px;
				float:right;
				margin:20px -16px 10px 0;
				padding-left:30px;
				padding-top:6px;
			}
			
			.read_blog:hover{color:#37353b;}
		
			.social {padding:15px;}
			
			.social li {
				list-style:none;
				margin-left:-25px;
				margin-bottom:5px;
			}
			
			.social li a {padding-left:35px;}
		
			.social a:hover {
				color:#cc4939;
			}
			
				.social_icons {
					display:block;
					width:18px;
					height:18px;
					background: url(<%= image_path('social_icons.png') %>);
					background-position:no-repeat;
				}
				
				.icon_be {background-position:0 0;}
				.icon_be:hover{background-position:0 -18px;}
				
				.icon_mail {background-position:-18px 0;}
				.icon_mail:hover{background-position:-18px -18px;}
				
				.icon_fb {background-position:-36px 0;}
				.icon_fb:hover{background-position:-36px -18px;}
				
				.icon_gp {background-position:-54px 0;}
				.icon_gp:hover{background-position:-54px -18px;}
				
				
				
				.about_site {
					position:absolute;
					right:20px;
					bottom:0px;
					font-family:Cuprum-Regular;
					background:url(<%= image_path('ruby.png') %>) no-repeat 0 12px;
					padding-left:21px;
				}
		
		.last_posts {
			background:#37353b;
			color:#fff;
			padding-top:20px;
			position:relative;
		}
		
			.last_posts .new {
				display:block;
				width:60px;
				height:46px;
				position:absolute;
				top:0;
				right:0;
				background:url(<%= image_path('latest_posts.png') %>) no-repeat;
			}
		
			.last_posts blockquote p {font-size:14px;}
			
			.last_posts blockquote a {padding:2px 4px;}
			.last_posts blockquote a:hover {
				background:#cc4939;
			}
		
		
		

@media screen and (max-width: 400px) {
  @-ms-viewport {
    width: 320px;
  }
  
	.logotip:after, .logotip:before {
		display:none;
	}
	
	.projects {padding-left:40px;}
	
	.project {
		width:140px;
		height:140px;
		margin:5px;
	}
}

@media screen and (max-width: 480px) {
	.projects {padding-left:50px;}
}

@media screen and (max-width: 640px) {
  
	.projects {padding-left:70px;}
	
	.project {
		width:160px;
		margin:5px;
	}
}

@media screen and (max-width: 768px) {
  .logotip {
	  padding-left:10px;
  }
  
	.entry h4 {
		background: none;
	}

}

@media (min-width: 768px) and (max-width: 991px) {
  .projects {padding-left:60px;}
}