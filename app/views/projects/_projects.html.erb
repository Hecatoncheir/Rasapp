<% if @projects %>
	<% @projects.each do |project| %>
		<div class="col col-lg-2 project">
			<div class="preview">
				<%= link_to (image_tag(project.image.url(:default))) %>
				<div class="clear"></div>
			</div>
			<div class="hidden-sm info">
				<h6><%= project.title %></h6>
			</div>
		</div>
	<% end %>

<% else %>
	<p>Проекты еще не добавленны</p>
<% end %>